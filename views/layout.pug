- const env = process.env.NODE_ENV || 'dev';

doctype html

html
    head
        title BAT Loyalty Program
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="icon" type="image/x-icon" href="/img/logo/logo-white-bat.png")

        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")


        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap")
        
        link(rel='stylesheet', href="/select2/dist/css/select2.min.css")
        
        link(rel='stylesheet', href='/css/select2_config.css')
        link(rel='stylesheet', href='/css/layout.css')
        link(rel='stylesheet', href='/css/fonts.css')

        script(src="/jquery/dist/jquery.min.js")
        script(src="/select2/dist/js/select2.min.js")
        
        script(src='/js/fn.js')
        block styles
        
    body
        input#userType(value=user_type type='hidden')

        nav.nav-bar
            img.nav-bar__logo(src="/img/logo/logo-white-bat.png", alt="Bat Logo")
            ul.nav-bar__main
                li
                    a(href="/dashboard")
                        i.bi.bi-display
                        span.nav-text Dashboard
                li
                    a(href="/process_receipt")
                        i.bi.bi-receipt
                        span.nav-text Process Receipt
                li
                    a(href="/user_maintenance")
                        i.bi.bi-person
                        span.nav-text User Maintenance
                li
                    a(href="/account_maintenance")
                        i.bi.bi-person-rolodex
                        span.nav-text Account Maintenance
                li
                    a(href="/product_maintenance")
                        i.bi.bi-basket
                        span.nav-text Product Maintenance
                li
                    a(href="/notification_news_maintenance")
                        i.bi.bi-newspaper
                        span.nav-text Notification & News Maintenance
                li
                    a(href="/redemption_management")
                        i.bi.bi-gift
                        span.nav-text Redemption Management
                li
                    a(href="/program_management")
                        i.bi.bi-calendar-event
                        span.nav-text Program Management
                li
                    a(href="/miscellaneous_report")
                        i.bi.bi-file-earmark-text
                        span.nav-text Miscellaneous Report
            ul.nav-bar__footer
                li
                    a(href="/settings")
                        i.bi.bi-gear
                        span.nav-text Settings
                li
                    a(href="/logout")
                        i.bi.bi-box-arrow-right
                        span.nav-text Logout

        
        .header
            block header

        .content
            block content