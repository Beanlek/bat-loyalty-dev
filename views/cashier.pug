extends layout

block styles
    link(rel='stylesheet', href='/css/table.css')
    script(src="/js/cashier.js")

block header
    .title-bar
        .title-bar__title
            h1.block-header Outlet
            span.breadcrumbs 
                a(href='/dashboard') Dashboard
                |  > 
                a(href='/account_maintenance') Account Maintenance
                |  > 
                a#outletBreadcrumb(href='#') Outlet
                |  >
                a#cashierBreadcrumb(href='#') Cashier
        .title-bar__profile
            span User ID: #{user_id}

block content
    .action
        .action__query
            .searchbar
                form.bar(action="")
                    i.fa.fa-search.search-icon
                    input.search(type="search")
        .action__pagination
            .paginator
                span Page 
                input.current-page
                span.total-pages of 1
        .stepper
            button.prev
                i(class="fa-solid fa-chevron-left")
            button.next
                i(class="fa-solid fa-chevron-right")
    table.data-list
        thead
            tr
                th No.
                th ID
                th Email
                th Name
                th Address
                th Last Login
                th Status
                th Created At 
                th Created By
        tbody
    .loading-indicator Loading...
